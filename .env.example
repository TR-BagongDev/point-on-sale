# ============================================
# Point on Sale - Environment Configuration Template
# ============================================
# Copy this file to .env and fill in the actual values

# --------------------------------------------
# Database (PostgreSQL)
# --------------------------------------------
# Prisma Accelerate URL (recommended for serverless)
DATABASE_URL="prisma+postgres://accelerate.prisma-data.net/?api_key=YOUR_API_KEY_HERE"

# Or direct PostgreSQL connection (for migrations/dev)
# DIRECT_URL="postgresql://user:password@host:5432/database?schema=public"

# --------------------------------------------
# NextAuth.js Authentication
# --------------------------------------------
NEXTAUTH_URL="http://localhost:3000"
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="generate-a-secure-secret-here"

# --------------------------------------------
# Application Environment
# --------------------------------------------
NODE_ENV="development"

# --------------------------------------------
# Optional Configuration
# --------------------------------------------
# NEXT_PUBLIC_APP_URL="http://localhost:3000"
# ENABLE_OFFLINE_MODE="true"
# ENABLE_ANALYTICS="true"
